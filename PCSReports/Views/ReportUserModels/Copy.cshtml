@model PCSReports.Models.ReportUserViewModel

@{
    ViewBag.Title = "User Reports";
}

<h2>User Reports</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    <p>This action will remove all reports assigned to the selected "Copy To" user and then add all the reports assigned to the "Copy From" user to the "Copy To" user.</p>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.CopyFromUser, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.CopyFromUser, Model.lsUser, "<-Select User->", htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.CopyFromUser, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CopyToUser, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.CopyToUser, Model.lsUser, "<-Select User->", htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.CopyToUser, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Submit" class="btn btn-primary" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
