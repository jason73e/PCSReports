@model PCSReports.Models.ManageRolesViewModel

@{
    ViewBag.Title = "Roles List";
}

<h2>Roles List</h2>

<p>
    @Html.ActionLink("Add Role", "AddRole")
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                Role Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.AllRoles)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Delete", "DeleteRole", new { id = item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
