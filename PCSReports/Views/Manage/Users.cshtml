@model PCSReports.Models.ManageUsersViewModel

@{
    ViewBag.Title = "User List";
}

<h2>User List</h2>

<p>
    @Html.ActionLink("Add User", "Register", "Account")
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                User Name
            </th>
            <th>
                Email Address
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.AllUsers)
    {
        <tr>
            <td>
                @item.UserName
            </td>
            <td>
                @item.Email
            </td>
            <td>
                @Html.ActionLink("Reset Password", "SetUserPassword", new { UserName = item.UserName }) |
                @Html.ActionLink("Delete", "DeleteUser", new { id = item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
