@model PCSReports.Models.ReportViewModel

@{
    ViewBag.Title = "Add Report";
}

<h2>Add Report From Reporting Server</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    <div class="alert-danger">
        @ViewBag.ErrorMessage
    </div>
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Report",htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model =>model.rm.path,Model.lsReports,"<-- Select Report-->" , htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.rm.name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
